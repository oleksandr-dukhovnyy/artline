{
  "extends": [
    "stylelint-config-standard-scss",
    "stylelint-config-recommended-vue"
  ],
  "rules": {
    "property-no-vendor-prefix": null,
    "color-function-notation": null,
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "include",
          "mixin",
          "media-up",
          "media-down",
          "each",
          "for",
          "if",
          "else"
        ]
      }
    ],
    "selector-class-pattern": "[a-z]+[a-z-]*[a-z]",
    "media-feature-range-notation": "prefix"
  },
  "ignoreFiles": [
    "dist/*/**",
    "**/*.png",
    "**/*.jpg",
    "**/*.ico",
    "**/*.txt",
    "**/*.html",
    "**/*.jpeg",
    "**/*.svg",
    "**/*.md",
    "**/*.js",
    "**/*.json",
    "**/*.ts",
    "**/*.tsx",
    "!**/*.scss",
    "!**/*.vue",
    "LICENSE"
  ]
}
